<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button30s"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="30 с"
        android:textSize="25sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/button10s"
        app:layout_constraintEnd_toStartOf="@+id/button60s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button10s"
        app:layout_constraintTop_toTopOf="@+id/button10s" />

    <View
        android:id="@+id/divider9"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/primary3"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Button
        android:id="@+id/button60s"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="60 с"
        android:textSize="25sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/button30s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button30s"
        app:layout_constraintTop_toTopOf="@+id/button30s" />

    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/primary3"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <Button
        android:id="@+id/button10s"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="10 с"
        android:textSize="25sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintEnd_toStartOf="@+id/button30s"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Время"
        android:textColor="@color/primary3"
        app:layout_constraintEnd_toStartOf="@+id/divider10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider9"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="-"
        android:textSize="40sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPlus"
        app:layout_constraintEnd_toStartOf="@+id/buttonMultiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        app:layout_constraintTop_toTopOf="@+id/buttonPlus" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="+"
        android:textSize="40sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintEnd_toStartOf="@+id/buttonMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:text="×"
        android:textSize="40sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/buttonMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonMinus"
        app:layout_constraintTop_toTopOf="@+id/buttonMinus" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Действия"
        android:textColor="@color/primary3"
        app:layout_constraintEnd_toStartOf="@+id/divider8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider7"
        app:layout_constraintTop_toBottomOf="@+id/button110" />

    <View
        android:id="@+id/divider7"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/primary3"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="ТРЕНИРОВКА СЧЕТА"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/primary3"
        android:background="@color/primary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Выберите уровень сложности"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/primary3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="НАЧАТЬ"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/primary4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider5"
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toTopOf="@+id/buttonStop"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSign"
        app:layout_constraintVertical_bias="0.120000005" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Числа"
        android:textColor="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/divider5"
        app:layout_constraintEnd_toStartOf="@+id/divider6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@+id/divider5" />

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />


    <Button
        android:id="@+id/button110"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary3"
        android:paddingHorizontal="0dp"
        android:text="1 - 10"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toStartOf="@+id/button1050"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button1050"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:text="10 - 50"
        android:textSize="20sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/button110"
        app:layout_constraintEnd_toStartOf="@+id/button5099"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button110"
        app:layout_constraintTop_toTopOf="@+id/button110" />

    <Button
        android:id="@+id/button5099"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:paddingHorizontal="0dp"
        android:text="50 - 99"
        android:textSize="20sp"
        app:cornerRadius="5dp"
        android:backgroundTint="@color/primary3"
        app:layout_constraintBottom_toBottomOf="@+id/button1050"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button1050"
        app:layout_constraintTop_toTopOf="@+id/button1050" />

</androidx.constraintlayout.widget.ConstraintLayout>